generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  email         String?  @unique
  displayName   String?  @unique
  isVerified    Boolean  @default(false)
  gameAuthCode  String?
  lastMatchCode String?
  player        Player?  @relation(fields: [playerId], references: [id])
  playerId      String?  @unique
  createdAt     DateTime @default(now())
}

model Player {
  id      String             @id @default(uuid())
  steamId String             @unique
  user    User?
  stats   PlayerMatchStats[]
}

model Match {
  id            String             @id @default(uuid())
  matchId       String             @unique
  mapName       String
  team1Score    Int
  team2Score    Int
  playedAt      DateTime
  stats         PlayerMatchStats[]
  steamMatch    SteamMatch?
  uploadedMatch UploadedMatch?
}

model SteamMatch {
  id            String  @id
  match         Match   @relation(fields: [id], references: [id], onDelete: Cascade)
  mapUrl        String
  reservationId String?
}

model UploadedMatch {
  id         String   @id
  match      Match    @relation(fields: [id], references: [id], onDelete: Cascade)
  uploadedAt DateTime @default(now())
}

model PlayerMatchStats {
  id         String @id @default(uuid())
  playerId   String
  matchId    String
  steamId    String
  username   String
  rank       Int
  teamNumber Int

  // Totals from match stats
  totalKills         Int
  totalDeaths        Int
  totalAssists       Int
  totalDamage        Int
  headshotPercentage Float

  // Metrics
  accuracySpotted    Float
  timeToDamage       Float
  crosshairPlacement Float
  sprayAccuracy      Float
  counterStrafeRatio Float
  headshotAccuracy   Float

  // Openers & trades
  openingKills        Int
  openingAttempts     Int
  tradeKills          Int
  tradeAttempts       Int
  tradedDeaths        Int
  tradedDeathAttempts Int

  // Multi-kill rounds
  twoKillRounds   Int
  threeKillRounds Int
  fourKillRounds  Int
  fiveKillRounds  Int

  // Relations
  player Player @relation(fields: [playerId], references: [id])
  match  Match  @relation(fields: [matchId], references: [id])

  @@index([playerId])
  @@index([matchId])
}
